@page "/treatments"
@using ClinicTracking.Client.DTOs
@using ClinicTracking.Client.Services
@inject ITreatmentService TreatmentService
@inject IJSRuntime JSRuntime

<PageTitle>Manage Treatments</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-pills me-2"></i>
                        Manage Treatments
                    </h4>
                    <button class="btn btn-primary" @onclick="ShowCreateModal">
                        <i class="fas fa-plus me-2"></i>
                        Add Treatment
                    </button>
                </div>
                <div class="card-body">
                    @if (treatments == null)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (!treatments.Any())
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            No treatments defined. Click "Add Treatment" to create your first treatment.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var treatment in treatments)
                                    {
                                        <tr>
                                            <td class="fw-bold">@treatment.Name</td>
                                            <td>@(treatment.Description ?? "No description")</td>
                                            <td>
                                                @if (treatment.IsInUse)
                                                {
                                                    <span class="badge bg-success">In Use</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Available</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @treatment.CreatedOn.ToString("dd/MM/yyyy")
                                                    <br />
                                                    by @treatment.CreatedBy
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(treatment)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" 
                                                            @onclick="() => ConfirmDelete(treatment)"
                                                            disabled="@treatment.IsInUse">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="treatmentModal" tabindex="-1" aria-labelledby="treatmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="treatmentModalLabel">
                    @(isEditing ? "Edit Treatment" : "Create Treatment")
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <EditForm Model="treatmentForm" OnValidSubmit="SaveTreatment" FormName="TreatmentForm">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    <ValidationSummary class="alert alert-danger" />
                    
                    <div class="mb-3">
                        <label for="name" class="form-label">Treatment Name <span class="text-danger">*</span></label>
                        <InputText id="name" class="form-control" @bind-Value="treatmentForm.Name" />
                        <ValidationMessage For="@(() => treatmentForm.Name)" />
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <InputTextArea id="description" class="form-control" rows="3" @bind-Value="treatmentForm.Description" />
                        <ValidationMessage For="@(() => treatmentForm.Description)" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        @(isEditing ? "Update" : "Create")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private List<TreatmentDto>? treatments;
    private CreateTreatmentDto treatmentForm = new();
    private bool isEditing = false;
    private bool isSaving = false;
    private Guid editingId = Guid.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTreatments();
    }

    private async Task LoadTreatments()
    {
        try
        {
            var result = await TreatmentService.GetAllTreatmentsAsync();
            treatments = result.ToList();
        }
        catch
        {
            await JSRuntime.InvokeVoidAsync("alert", "Error loading treatments. Please try again.");
        }
    }

    private async Task ShowCreateModal()
    {
        isEditing = false;
        editingId = Guid.Empty;
        treatmentForm = new CreateTreatmentDto();
        await SafeShowModal();
    }

    private async Task ShowEditModal(TreatmentDto treatment)
    {
        isEditing = true;
        editingId = treatment.Id;
        treatmentForm = new CreateTreatmentDto
        {
            Name = treatment.Name,
            Description = treatment.Description
        };
        await SafeShowModal();
    }

    private async Task SaveTreatment()
    {
        isSaving = true;
        try
        {
            if (isEditing)
            {
                var updateDto = new UpdateTreatmentDto
                {
                    Name = treatmentForm.Name,
                    Description = treatmentForm.Description
                };
                await TreatmentService.UpdateTreatmentAsync(editingId, updateDto);
            }
            else
            {
                await TreatmentService.CreateTreatmentAsync(treatmentForm);
            }

            await SafeHideModal();
            await LoadTreatments();
        }
        catch
        {
            await JSRuntime.InvokeVoidAsync("alert", "Error saving treatment. Please try again.");
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ConfirmDelete(TreatmentDto treatment)
    {
        if (treatment.IsInUse)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Cannot delete treatment that is currently assigned to patients.");
            return;
        }

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Are you sure you want to delete the treatment '{treatment.Name}'? This action cannot be undone.");

        if (confirmed)
        {
            try
            {
                var success = await TreatmentService.DeleteTreatmentAsync(treatment.Id);
                if (success)
                {
                    await LoadTreatments();
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Error deleting treatment. It may be in use by patients.");
                }
            }
            catch
            {
                await JSRuntime.InvokeVoidAsync("alert", "Error deleting treatment. Please try again.");
            }
        }
    }

    // Helper wrappers so failures don’t crash the circuit
    private async Task SafeShowModal()
    {
        try { await JSRuntime.InvokeVoidAsync("showModal", "#treatmentModal"); }
        catch { /* swallow; check console if not appearing */ }
    }

    private async Task SafeHideModal()
    {
        try { await JSRuntime.InvokeVoidAsync("hideModal", "#treatmentModal"); }
        catch { }
    }
}