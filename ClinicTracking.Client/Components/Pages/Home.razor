@page "/"
@using ClinicTracking.Client.DTOs
@using ClinicTracking.Client.Services
@using Microsoft.JSInterop
@inject IPatientService PatientService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Clinic Tracking - Dashboard</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-heartbeat me-2"></i>
                Clinic Patient Tracking Dashboard
            </h1>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-clock me-2"></i>
                        Awaiting Counselling
                    </h5>
                    <h2 class="card-text">@awaitingCounsellingCount</h2>
                    <button class="btn btn-dark" @onclick="ShowAwaitingCounselling">View Details</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-pills me-2"></i>
                        Awaiting Treatment
                    </h5>
                    <h2 class="card-text">@awaitingTreatmentCount</h2>
                    <button class="btn btn-light" @onclick="ShowAwaitingTreatment">View Details</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calendar-check me-2"></i>
                        Follow-up Due
                    </h5>
                    <h2 class="card-text">@followUpDueCount</h2>
                    <button class="btn btn-light" @onclick="ShowFollowUpDue">View Details</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search by patient name or MRN..." @bind="searchTerm" @onkeypress="OnSearchKeyPress" />
                <button class="btn btn-primary" @onclick="SearchPatients">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </div>
        <div class="col-md-3 d-flex align-items-center">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="hideWithoutReferralDate" @bind="hideWithoutReferralDate" @bind:after="OnHideWithoutReferralDateChanged" />
                <label class="form-check-label" for="hideWithoutReferralDate">
                    Hide patients without referral date
                </label>
            </div>
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-secondary w-100" @onclick="ClearFilter" title="Clear all filters and sorting">
                <i class="fas fa-times-circle me-2"></i>Clear Filters
            </button>
        </div>
        <div class="col-md-1">
            <div class="dropdown">
                <button class="btn btn-outline-primary dropdown-toggle w-100" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-download me-2"></i>Export
                </button>
                <ul class="dropdown-menu" aria-labelledby="exportDropdown">
                    <li><a class="dropdown-item" href="#" @onclick="ExportToCsv" @onclick:preventDefault="true">
                        <i class="fas fa-file-csv me-2"></i>Export to CSV
                    </a></li>
                    <li><a class="dropdown-item" href="#" @onclick="ExportToExcel" @onclick:preventDefault="true">
                        <i class="fas fa-file-excel me-2"></i>Export to Excel
                    </a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-2 text-end">
            <button class="btn btn-success" @onclick="AddNewPatient">
                <i class="fas fa-plus"></i> Add New Patient
            </button>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (patients != null && patients.Any())
    {
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-0">
                            @if (!string.IsNullOrEmpty(currentFilter))
                            {
                                <span>@currentFilter</span>
                                <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="ClearFilter">
                                    Clear Filter
                                </button>
                            }
                            else
                            {
                                <span>All Patients</span>
                            }
                        </h5>
                        @if (pagedResult != null && pagedResult.TotalCount > 0)
                        {
                            <small class="text-muted">
                                Showing @((pagedResult.PageNumber - 1) * pagedResult.PageSize + 1)–@Math.Min(pagedResult.PageNumber * pagedResult.PageSize, pagedResult.TotalCount) of @pagedResult.TotalCount patients
                            </small>
                        }
                    </div>
                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0 small">Show:</label>
                            <select class="form-select form-select-sm" style="width: auto;" @onchange="ChangePageSize">
                                @foreach (var size in pageSizeOptions)
                                {
                                    <option value="@size" selected="@(pagination.PageSize == size)">@size</option>
                                }
                            </select>
                            <span class="small text-muted">records per page</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>MRN</th>
                                <th>Name</th>
                                <th class="sortable-header" @onclick='() => ToggleSort("ReferralDate")'>
                                    Referral Date
                                    @if (sortColumn == "ReferralDate")
                                    {
                                        <i class="fas @(sortAscending ? "fa-sort-up" : "fa-sort-down") ms-1"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </th>
                                <th class="sortable-header" @onclick='() => ToggleSort("CounsellingDate")'>
                                    Counselling Date
                                    @if (sortColumn == "CounsellingDate")
                                    {
                                        <i class="fas @(sortAscending ? "fa-sort-up" : "fa-sort-down") ms-1"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </th>
                                <th class="sortable-header" @onclick='() => ToggleSort("DispensedDate")'>
                                    Dispensed Date
                                    @if (sortColumn == "DispensedDate")
                                    {
                                        <i class="fas @(sortAscending ? "fa-sort-up" : "fa-sort-down") ms-1"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </th>
                                <th>Treatment</th>
                                <th class="sortable-header" @onclick='() => ToggleSort("TreatmentType")'>
                                    Treatment Type
                                    @if (sortColumn == "TreatmentType")
                                    {
                                        <i class="fas @(sortAscending ? "fa-sort-up" : "fa-sort-down") ms-1"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </th>
                                <th>Wait Time (days)</th>
                                <th>Treatment Time (days)</th>
                                <th class="sortable-header" @onclick='() => ToggleSort("NextAppointment")'>
                                    Next Appointment
                                    @if (sortColumn == "NextAppointment")
                                    {
                                        <i class="fas @(sortAscending ? "fa-sort-up" : "fa-sort-down") ms-1"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in patients)
                            {
                                <tr>
                                    <td><strong>@patient.MRN</strong></td>
                                    <td>@patient.Name</td>
                                    <td>@(patient.ReferralDate?.ToString("dd/MM/yyyy") ?? "Not set")</td>
                                    <td>
                                        @if (patient.CounsellingDate.HasValue)
                                        {
                                            @patient.CounsellingDate.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (patient.DispensedDate.HasValue)
                                        {
                                            @patient.DispensedDate.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not dispensed</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(patient.TreatmentName))
                                        {
                                            @patient.TreatmentName
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not specified</span>
                                        }
                                    </td>
                                    <td>
                                        @if (patient.Adjuvant)
                                        {
                                            <span class="badge bg-secondary">Adjuvant</span>
                                        }
                                        else if (patient.Palliative)
                                        {
                                            <span class="badge bg-info">Palliative</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not specified</span>
                                        }
                                    </td>
                                    <td>
                                        @if (patient.WaitTimeReferralToCounselling.HasValue)
                                        {
                                            var waitTime = patient.WaitTimeReferralToCounselling.Value;
                                            <span class="@(waitTime > 14 ? "text-danger fw-bold" : waitTime > 7 ? "text-warning" : "text-success")">
                                                @waitTime
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (patient.TreatTime.HasValue)
                                        {
                                            <span class="text-info">@patient.TreatTime.Value</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (patient.NextAppointment.HasValue)
                                        {
                                            var isOverdue = patient.NextAppointment.Value.Date < DateTime.Today;
                                            <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                                @patient.NextAppointment.Value.ToString("dd/MM/yyyy")
                                            </span>
                                            @if (isOverdue)
                                            {
                                                <i class="fas fa-exclamation-triangle text-danger"></i>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">None scheduled</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-primary me-1" @onclick="() => ViewPatient(patient.Id)">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning me-1" @onclick="() => EditPatient(patient.Id)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @if (pagedResult != null && pagedResult.TotalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Patient pagination">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(pagedResult.HasPreviousPage ? "" : "disabled")">
                                <button class="page-link" @onclick="() => GoToPage(1)" disabled="@(!pagedResult.HasPreviousPage)">
                                    First
                                </button>
                            </li>
                            <li class="page-item @(pagedResult.HasPreviousPage ? "" : "disabled")">
                                <button class="page-link" @onclick="() => GoToPage(pagedResult.PageNumber - 1)" disabled="@(!pagedResult.HasPreviousPage)">
                                    Previous
                                </button>
                            </li>
                            
                            @{
                                int startPage = Math.Max(1, pagedResult.PageNumber - 2);
                                int endPage = Math.Min(pagedResult.TotalPages, pagedResult.PageNumber + 2);
                            }
                            
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                var pageNumber = i;
                                <li class="page-item @(pagedResult.PageNumber == pageNumber ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(pageNumber)">
                                        @pageNumber
                                    </button>
                                </li>
                            }
                            
                            <li class="page-item @(pagedResult.HasNextPage ? "" : "disabled")">
                                <button class="page-link" @onclick="() => GoToPage(pagedResult.PageNumber + 1)" disabled="@(!pagedResult.HasNextPage)">
                                    Next
                                </button>
                            </li>
                            <li class="page-item @(pagedResult.HasNextPage ? "" : "disabled")">
                                <button class="page-link" @onclick="() => GoToPage(pagedResult.TotalPages)" disabled="@(!pagedResult.HasNextPage)">
                                    Last
                                </button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    }
    else if (!loading)
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <span>No patients found matching "@searchTerm".</span>
            }
            else
            {
                <span>No patients found. <a href="/add-patient" class="alert-link">Add the first patient</a>.</span>
            }
        </div>
    }
</div>

@code {
    private IEnumerable<PatientTrackingDto>? patients;
    private PagedResult<PatientTrackingDto>? pagedResult;
    private int awaitingCounsellingCount = 0;
    private int awaitingTreatmentCount = 0;
    private int followUpDueCount = 0;
    private string searchTerm = "";
    private string currentFilter = "";
    private string activeFilterType = ""; // Tracks the active filter: "awaiting-counselling", "awaiting-treatment", "follow-up-due", or "" for all/search
    private bool loading = true;
    private string? sortColumn = null;
    private bool sortAscending = true;
    private bool hideWithoutReferralDate = false;
    
    // Pagination properties
    private PaginationParameters pagination = new() { PageNumber = 1, PageSize = 10 };
    private readonly int[] pageSizeOptions = { 10, 25, 50, 100 };

    protected override async Task OnInitializedAsync()
    {
        await LoadPatients();
        await LoadCounts();
    }

    private async Task LoadPatients()
    {
        loading = true;
        try
        {
            // Load data based on the active filter type
            if (!string.IsNullOrEmpty(searchTerm))
            {
                pagedResult = await PatientService.SearchPatientsPagedAsync(searchTerm, pagination, hideWithoutReferralDate);
                patients = pagedResult.Items;
                currentFilter = $"Search results for '{searchTerm}'";
            }
            else if (activeFilterType == "awaiting-counselling")
            {
                pagedResult = await PatientService.GetAwaitingCounsellingPagedAsync(pagination, hideWithoutReferralDate);
                patients = pagedResult.Items;
                currentFilter = "Patients Awaiting Counselling";
            }
            else if (activeFilterType == "awaiting-treatment")
            {
                pagedResult = await PatientService.GetAwaitingTreatmentPagedAsync(pagination, hideWithoutReferralDate);
                patients = pagedResult.Items;
                currentFilter = "Patients Awaiting Treatment";
            }
            else if (activeFilterType == "follow-up-due")
            {
                pagedResult = await PatientService.GetFollowUpDuePagedAsync(pagination, hideWithoutReferralDate);
                patients = pagedResult.Items;
                currentFilter = "Patients with Follow-up Due";
            }
            else
            {
                pagedResult = await PatientService.GetPagedPatientsAsync(pagination, hideWithoutReferralDate);
                patients = pagedResult.Items;
                currentFilter = "";
            }
            
            // Apply client-side sorting if needed
            ApplySorting();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading patients: {ex.Message}");
            patients = new List<PatientTrackingDto>();
            pagedResult = new PagedResult<PatientTrackingDto>();
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadCounts()
    {
        try
        {
            var awaitingCounselling = await PatientService.GetAwaitingCounsellingAsync(hideWithoutReferralDate);
            var awaitingTreatment = await PatientService.GetAwaitingTreatmentAsync(hideWithoutReferralDate);
            var followUpDue = await PatientService.GetFollowUpDueAsync(hideWithoutReferralDate);

            awaitingCounsellingCount = awaitingCounselling.Count();
            awaitingTreatmentCount = awaitingTreatment.Count();
            followUpDueCount = followUpDue.Count();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading counts: {ex.Message}");
        }
    }

    private async Task SearchPatients()
    {
        pagination.PageNumber = 1; // Reset to first page on new search
        activeFilterType = ""; // Clear filter type when searching
        await LoadPatients();
    }

    private async Task OnSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchPatients();
        }
    }

    private async Task ShowAwaitingCounselling()
    {
        loading = true;
        pagination.PageNumber = 1;
        searchTerm = "";
        activeFilterType = "awaiting-counselling";
        try
        {
            pagedResult = await PatientService.GetAwaitingCounsellingPagedAsync(pagination);
            patients = pagedResult.Items;
            currentFilter = "Patients Awaiting Counselling";
            ApplySorting();
        }
        finally
        {
            loading = false;
        }
    }

    private async Task ShowAwaitingTreatment()
    {
        loading = true;
        pagination.PageNumber = 1;
        searchTerm = "";
        activeFilterType = "awaiting-treatment";
        try
        {
            pagedResult = await PatientService.GetAwaitingTreatmentPagedAsync(pagination);
            patients = pagedResult.Items;
            currentFilter = "Patients Awaiting Treatment";
            ApplySorting();
        }
        finally
        {
            loading = false;
        }
    }

    private async Task ShowFollowUpDue()
    {
        loading = true;
        pagination.PageNumber = 1;
        searchTerm = "";
        activeFilterType = "follow-up-due";
        try
        {
            pagedResult = await PatientService.GetFollowUpDuePagedAsync(pagination);
            patients = pagedResult.Items;
            currentFilter = "Patients with Follow-up Due";
            ApplySorting();
        }
        finally
        {
            loading = false;
        }
    }

    private async Task ClearFilter()
    {
        searchTerm = "";
        currentFilter = "";
        activeFilterType = "";
        sortColumn = null;
        sortAscending = true;
        hideWithoutReferralDate = false;
        pagination.PageNumber = 1;
        await LoadPatients();
        await LoadCounts();
    }

    private async Task OnHideWithoutReferralDateChanged()
    {
        pagination.PageNumber = 1;
        await LoadPatients();
        await LoadCounts();
    }

    private void ToggleSort(string columnName)
    {
        if (sortColumn == columnName)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            sortColumn = columnName;
            sortAscending = true;
        }
        
        ApplySorting();
    }

    private void ApplySorting()
    {
        if (patients == null || string.IsNullOrEmpty(sortColumn))
            return;

        patients = sortColumn switch
        {
            "ReferralDate" => sortAscending 
                ? patients.OrderBy(p => p.ReferralDate)
                : patients.OrderByDescending(p => p.ReferralDate),
            "CounsellingDate" => sortAscending
                ? patients.OrderBy(p => p.CounsellingDate ?? DateTime.MaxValue)
                : patients.OrderByDescending(p => p.CounsellingDate ?? DateTime.MinValue),
            "DispensedDate" => sortAscending
                ? patients.OrderBy(p => p.DispensedDate ?? DateTime.MaxValue)
                : patients.OrderByDescending(p => p.DispensedDate ?? DateTime.MinValue),
            "NextAppointment" => sortAscending
                ? patients.OrderBy(p => p.NextAppointment ?? DateTime.MaxValue)
                : patients.OrderByDescending(p => p.NextAppointment ?? DateTime.MinValue),
            "TreatmentType" => sortAscending
                ? patients.OrderBy(p => GetTreatmentTypeDisplayValue(p), StringComparer.OrdinalIgnoreCase)
                : patients.OrderByDescending(p => GetTreatmentTypeDisplayValue(p), StringComparer.OrdinalIgnoreCase),
            _ => patients
        };
    }

    private static string GetTreatmentTypeDisplayValue(PatientTrackingDto patient)
    {
        if (patient.Adjuvant) return "Adjuvant";
        if (patient.Palliative) return "Palliative";
        return "Not specified";
    }

    // Pagination methods
    private async Task GoToPage(int pageNumber)
    {
        pagination.PageNumber = pageNumber;
        await LoadPatients();
    }

    private async Task ChangePageSize(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int newPageSize))
        {
            pagination.PageSize = newPageSize;
            pagination.PageNumber = 1; // Reset to first page
            await LoadPatients();
        }
    }

    private void AddNewPatient()
    {
        Navigation.NavigateTo("/add-patient");
    }

    private void ViewPatient(Guid id)
    {
        Navigation.NavigateTo($"/patient/{id}");
    }

    private void EditPatient(Guid id)
    {
        Navigation.NavigateTo($"/edit-patient/{id}");
    }

    private async Task ExportToCsv()
    {
        try
        {
            var filter = GetCurrentFilter();
            var searchTermForExport = string.IsNullOrEmpty(searchTerm) ? null : searchTerm;
            
            var csvData = await PatientService.ExportToCsvAsync(filter, searchTermForExport);
            await DownloadFile(csvData, $"patients_export_{DateTime.Now:yyyyMMdd_HHmmss}.csv", "text/csv");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error exporting to CSV: {ex.Message}");
        }
    }

    private async Task ExportToExcel()
    {
        try
        {
            var filter = GetCurrentFilter();
            var searchTermForExport = string.IsNullOrEmpty(searchTerm) ? null : searchTerm;
            
            var excelData = await PatientService.ExportToExcelAsync(filter, searchTermForExport);
            await DownloadFile(excelData, $"patients_export_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx", "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error exporting to Excel: {ex.Message}");
        }
    }

    private string? GetCurrentFilter()
    {
        if (!string.IsNullOrEmpty(activeFilterType))
            return activeFilterType;
        
        return null;
    }

    private async Task DownloadFile(byte[] fileContent, string fileName, string contentType)
    {
        var fileStream = new MemoryStream(fileContent);
        using var streamRef = new DotNetStreamReference(stream: fileStream);
        
        await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
    }
}